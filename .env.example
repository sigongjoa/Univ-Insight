# Univ-Insight Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== Database ====================
DATABASE_URL=sqlite:///./univ_insight.db
# Alternative for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/univ_insight
DB_ECHO=false

# ==================== FastAPI ====================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
ENVIRONMENT=development

# ==================== LLM Service ====================
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama2:latest
# Alternative: OPENAI_API_KEY=sk-... (if using OpenAI)

# ==================== Crawler Service ====================
CRAWLER_TIMEOUT=30
CRAWLER_RETRIES=3

# ==================== Notion Integration ====================
NOTION_API_KEY=ntn_xxx_your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ==================== Kakao Integration ====================
KAKAO_API_KEY=your_kakao_api_key_here
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here

# ==================== Vector Store (ChromaDB) ====================
CHROMADB_PATH=./chroma_db
CHROMADB_PERSIST=true

# ==================== Logging ====================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==================== Scheduler ====================
SCHEDULER_ENABLED=true
# Crawler job schedule: "0 0 * * 0" (Every Sunday at midnight)
CRAWLER_SCHEDULE=0 0 * * 0
# Report generation schedule: "0 8 * * *" (Every day at 8 AM)
REPORT_SCHEDULE=0 8 * * *

# ==================== External Services ====================
# GitHub API (optional, for retrieving trending repos)
GITHUB_API_KEY=ghp_xxx_your_github_token

# ==================== Application ====================
APP_NAME=Univ-Insight
APP_VERSION=1.0.0
SECRET_KEY=your-secret-key-for-jwt-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ==================== Email (optional) ====================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@univ-insight.com
